{% extends 'home.html.twig' %}

{% block datos %}

  <div>

  <h1>Formulario para actualizar un productos</h1>

  <form action="{{ path('update_car') }}" method="GET" >
    <input type="hidden" id="id" name="id" required value="{{carArray.id}}"><br>

    <label for="modelo">Modelo:</label>
    <input type="text" id="modelo" name="modelo" required value="{{carArray.model}}"><br>

    <label for="fabricante">Fabricante:</label>
    <input type="text" id="fabricante" name="fabricante" required value="{{carArray.manufacturer}}"><br>

    <label for="precio">Precio:</label>
    <input type="number" id="precio" name="precio" step="0.01" required value="{{carArray.price}}"><br>

    <label for="caracteristicas">Caracter√≠sticas:</label>
    <textarea id="caracteristicas" name="caracteristicas" rows="4" required >{{carArray.features}}</textarea><br>
    <input type="submit" value="Enviar">
  </form>
  </div>

{% endblock %}